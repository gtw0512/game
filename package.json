{
  "name": "game",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "typecheck": "tsc",
    "format:check": "npx prettier . --check \"**/*.{js,jsx,json,ts,tsx}\"",
    "format:write": "npx prettier . --write \"**/*.{js,jsx,json,ts,tsx}\"",
    "lint": "eslint \"**/*.{js,jsx,json,ts,tsx}\""
  },
  "dependencies": {
    "expo": "~50.0.2",
    "expo-status-bar": "~1.11.1",
    "react": "18.2.0",
    "react-native": "0.73.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run typecheck && npm run lint-staged"
    }
  },
  "lint-staged":{
    "src/**/*.{js,jsx,ts,tsx}": "eslint",
    "**/*.{js,jsx,json,ts,tsx}": "prettier --write"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "3.2.4",
    "typescript": "^5.1.3"
  },
  "private": true
}
